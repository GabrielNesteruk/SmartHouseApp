<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="200dp"
    android:paddingLeft="15dp">

    <TextView
        android:id="@+id/menu_slogan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/app_name"
        android:layout_marginBottom="20dp"
        android:text="Wybierz interesującą Cię opcję" />

    <TextView
        android:id="@id/app_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/menu_logo"
        android:text="SmartHouse"
        android:textColor="@color/black"
        android:textSize="24sp" />

    <ImageView
        android:id="@+id/menu_logo"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginBottom="2dp"
        android:src="@drawable/ic_menu_logo"
        android:layout_marginTop="25dp"/>

    <TextView
        android:id="@+id/switchTxt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Tryb sterowania:"
        android:layout_below="@id/menu_slogan"/>

    <com.google.android.material.switchmaterial.SwitchMaterial
        android:id="@+id/mode_switch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/switchTxt"
        android:text="MANUAL/AUTO" />

</RelativeLayout>